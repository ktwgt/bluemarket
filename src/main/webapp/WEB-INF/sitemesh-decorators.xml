<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/WEB-INF/views/common">
 <!-- 제외할 패턴 -->
 <excludes>
  <pattern>/select_add</pattern>
  <pattern>/chat/*</pattern>
 </excludes>
 
 <!-- 기본 패턴 -->
 <decorator name="default" page="default.jsp">
  <pattern>*</pattern> 
 </decorator>
 <!-- 내 상점 2차 패턴(회원정보) -->
 <decorator name="default_memberview" page="member_view.jsp">
  <pattern>/mypage/mypage*</pattern>
  <pattern>/mypage/shop*</pattern>  
 </decorator>

 
 <!-- 모바일 패턴 -->
 <decorator name="mobileDefault" page="mobileDefault.jsp">
  <pattern>/m.*.do</pattern> 
 </decorator>
</decorators>

 
